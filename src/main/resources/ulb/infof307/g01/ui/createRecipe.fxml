<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="750.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" >
   <children>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
         <children>
            <ComboBox fx:id="typeComboBox" prefWidth="150.0" promptText="Type" />
            <ComboBox fx:id="dietComboBox" prefWidth="150.0" promptText="Régime" />
            <TextField fx:id="recipeNameTextField" promptText="Nom de la recette" />
            <HBox alignment="CENTER" prefHeight="82.0" prefWidth="210.0">
               <children>
                  <Label prefHeight="16.0" prefWidth="133.0" text="Nb personnes :" />
                  <Spinner fx:id="nbPersonSpinner" editable="true" prefHeight="24.0" prefWidth="93.0" />
               </children>
            </HBox>
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="453.0" prefWidth="1191.0" spacing="10.0">
         <children>
            <TableView fx:id="ingredientTableView" prefHeight="435.0" prefWidth="373.0">
              <columns>
                <TableColumn fx:id="tableColumnProduct" prefWidth="121.0" text="Ingrédient" />
                <TableColumn fx:id="tableColumnQuantityOrNumber" prefWidth="104.0" text="Quantité" />
                  <TableColumn fx:id="tableColumnUnity" minWidth="0.0" prefWidth="126.0" text="Unité" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <TextArea fx:id="preparationTextArea" prefHeight="435.0" prefWidth="354.0" promptText="Ecrire la préparation ici..." />
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="100.0">
         <children>
            <Button lineSpacing="200.0" mnemonicParsing="false" onAction="#returnHomeRecipeWindow" prefHeight="25.0" prefWidth="120.0" text="Annuler" />
            <Button mnemonicParsing="false" onAction="#addIngredients" prefHeight="25.0" prefWidth="180.0" text="Modifier ingrédients" />
            <Button mnemonicParsing="false" onAction="#saveRecipe" prefHeight="25.0" prefWidth="115.0" text="Valider" />
         </children>
      </HBox>
   </children>
</VBox>
