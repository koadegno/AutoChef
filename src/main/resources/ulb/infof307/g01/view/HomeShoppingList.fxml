<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="600.0" prefWidth="750.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <children>
      <MenuBar prefHeight="26.0" prefWidth="750.0">
         <menus>
            <Menu mnemonicParsing="false" text="Profile">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#logout" text="Se déconnecter" />
               </items>
            </Menu>
         </menus>
      </MenuBar>
      <HBox alignment="CENTER" prefHeight="121.0" prefWidth="750.0">
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="111.0" prefWidth="463.0" text="Menu liste de courses" textAlignment="RIGHT" textFill="#383434" textOverrun="WORD_ELLIPSIS">
               <font>
                  <Font size="28.0" />
               </font></Label>
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="313.0" prefWidth="750.0" spacing="80.0">
         <children>
              <Button fx:id="shoppingListBtn" mnemonicParsing="false" onAction="#displayUserShoppingListController" prefHeight="50.0" prefWidth="170.0" text="Mes listes de courses" />
              <Button fx:id="createShoppingListBtn" mnemonicParsing="false" onAction="#displayCreateUserShoppingListController" prefHeight="50.0" prefWidth="170.0" text="Créer une liste de courses" />
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="133.0" prefWidth="600.0">
         <children>
              <Button fx:id="returnBtn" mnemonicParsing="false" onAction="#returnHomeShoppingListController" prefHeight="48.0" prefWidth="415.0" text="Retour" />
         </children>
      </HBox>
    </children>

</VBox>
