<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="750.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ulb.infof307.g01.view.menu.HomeMenuViewController">
   <children>
      <MenuBar prefHeight="26.0" prefWidth="750.0">
         <menus>
            <Menu mnemonicParsing="false" text="Profil">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#logout" text="Se déconnecter" />
               </items>
            </Menu>
         </menus>
      </MenuBar>
      <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="221.0" prefWidth="553.0" text="Bienvenue aux Menus">
         <font>
            <Font size="51.0" />
         </font>
      </Label>
      <HBox alignment="CENTER" prefHeight="267.0" prefWidth="750.0" spacing="40.0">
         <children>
            <Button mnemonicParsing="false" onAction="#onUserMenusButtonClick" prefHeight="45.0" prefWidth="150.0" text="Voir mes Menus" />
            <Button mnemonicParsing="false" onAction="#onCreateMenuButtonClick" prefHeight="45.0" prefWidth="150.0" text="Créer un Menu" />
         </children>
      </HBox>
      <Button mnemonicParsing="false" onAction="#onBackButtonClick" prefHeight="43.0" prefWidth="335.0" text="Retour" />
   </children>
